    .score {
      font-size: 3rem;
      margin: 10px 0;
      color: #ffccdd;
    }

    .current {
      background-color: #f06292;
      border-radius: 10px;
      padding: 10px;
      margin-top: 15px;
      color: white;
    }

    .current-lable {
      font-weight: bold;
      font-size: 1rem;
      margin-bottom: 5px;
    }

    .current-score {
      font-size: 1.5rem;
    }

    .dice {
      margin: 30px 0;
      width: 80px;
      transition: transform 0.3s;
    }

    .roll {
      animation: roll 0.3s;
    }

    @keyframes roll {
      0% { transform: rotate(0deg); }
      50% { transform: rotate(360deg); }
      100% { transform: rotate(720deg); }
    }

    .btn {
